<%- include('header'); -%>
  <div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
      <div class="mdl-card mdl-shadow--6dp">
        <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
            <h2 class="mdl-card__title-text"><%= title %></h2>
        </div>
        <div class="mdl-card__supporting-text">
            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="text" disabled value="<%= confirm.to_id %>"/>
                <label class="mdl-textfield__label" for="iban">Numer IBAN</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
                <input class="mdl-textfield__input" type="number" disabled value="<%= confirm.money %>"/>
                <label class="mdl-textfield__label" for="money">Pieniążki</label>
            </div>
          <form id="confirmform" action="/user/transfer/execute" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input class="mdl-textfield__input" type="hidden" id="iban" name="iban" value="<%= confirm.to_id %>"/>
            <input class="mdl-textfield__input" type="hidden" id="money" name="money" value="<%= confirm.money %>"/>
          </form>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <input type="submit" form="confirmform" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"/>
        </div>
      </div>
    </main>
  </div>
<%- include('footer'); -%>