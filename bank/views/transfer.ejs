<%- include('header'); -%>
  <div class="mdl-layout mdl-js-layout mdl-color--grey-100">
    <main class="mdl-layout__content">
      <div class="mdl-card mdl-shadow--6dp">
        <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
            <h2 class="mdl-card__title-text"><%= title %></h2>
        </div>
        <div class="mdl-card__supporting-text">
          <form id="transferform" action="/user/transfer/confirm" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mdl-textfield mdl-js-textfield">
                  <input class="mdl-textfield__input" type="text" id="iban" name="iban" />
                  <label class="mdl-textfield__label" for="iban">Numer IBAN</label>
              </div>
              <div class="mdl-textfield mdl-js-textfield">
                  <input class="mdl-textfield__input" type="number" id="money" name="money" />
                  <label class="mdl-textfield__label" for="money">Pieniążki</label>
              </div>
          </form>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <input type="submit" form="transferform" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"/>
        </div>
      </div>
    </main>
  </div>
<%- include('footer'); -%>